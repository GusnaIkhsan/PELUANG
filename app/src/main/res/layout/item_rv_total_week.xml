<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_relative_layout">

    <TextView
        android:id="@+id/textView3_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Total"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4_test"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3_test"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:text="Pemasukan"
        android:textColor="@android:color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView5_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4_test"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:text="Pengeluaran"
        android:textColor="@android:color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/income_week_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3_test"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="131dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/textView4_test"
        android:text="Rp 165.000,00"
        android:textAlignment="textEnd"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/outcome_week_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/income_week_test"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="132dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/textView5_test"
        android:text="Rp 75.000,00"
        android:textAlignment="textEnd"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/divider_week_test"
        android:layout_width="327dp"
        android:layout_height="1dp"
        android:layout_below="@+id/outcome_week_test"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="10dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/deviation_week_test"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/outcome_week_test"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="180dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/textView2_test"
        android:text="Rp 90.000,00"
        android:textAlignment="textEnd"
        android:textColor="@color/orange"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5_test"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="10dp"
        android:text="Selisih"
        android:textSize="12sp" />

</RelativeLayout>